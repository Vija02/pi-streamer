# Server Configuration
PORT=3000

# Local Storage (primary - always enabled)
LOCAL_STORAGE_DIR=./received

# AWS S3 Configuration
S3_ENABLED=true
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
S3_BUCKET=your-audio-bucket
S3_PREFIX=recordings/

# Optional: For S3-compatible services (Cloudflare R2, MinIO, etc.)
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_PUBLIC_URL=https://files.example.com  # Public URL for accessing files (required for R2, custom domains)

# Upload Queue Settings
UPLOAD_RETRY_INTERVAL=5000
UPLOAD_MAX_RETRIES=5
UPLOAD_CONCURRENCY=2

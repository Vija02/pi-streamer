{
  "name": "xr18-stream-receiver",
  "version": "1.0.0",
  "description": "Receives 18-channel audio stream from XR18 and uploads to S3",
  "type": "module",
  "scripts": {
    "start": "bun run server.ts",
    "start:node": "node --experimental-strip-types server.ts",
    "dev": "bun --watch run server.ts",
    "build:web": "cd web && bun run build",
    "dev:web": "cd web && bun run dev"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.990.0",
    "@aws-sdk/lib-storage": "^3.700.0",
    "hono": "^4.11.9"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.7.0"
  }
}
